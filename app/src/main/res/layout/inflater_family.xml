<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/familyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/boy_image"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Angel's Landing" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/familyTitle">

        <TextView
            android:id="@+id/familyLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Zion National Park" />

        <TextView
            android:id="@+id/familyDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Difficult" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>